{
  "name": "@jmoyson/coldr",
  "version": "0.0.2-beta.2",
  "description": "Run Cold emails campaigns from your terminal.",
  "bin": {
    "coldr": "bin/index.js"
  },
  "type": "module",
  "files": [
    "bin/",
    "src/",
    "scaffold/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
