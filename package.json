  "author": "Jeremy Moyson <moyson.jeremy@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jmoyson/coldr/issues"
  },
  "homepage": "https://github.com/jmoyson/coldr#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ora": "^9.0.0",
    "resend": "^6.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "vitest": "^4.0.4"
  }
